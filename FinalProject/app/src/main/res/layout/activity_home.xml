<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:id="@+id/home_HEIGHT"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:id="@+id/home_WEIGHT"
        android:layout_toRightOf="@id/home_HEIGHT"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heartrate"
        android:id="@+id/home_HEARTRATE"
        android:layout_below="@id/home_HEIGHT"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"
        android:id="@+id/home_STEPS"
        android:layout_toRightOf="@id/home_HEARTRATE"
        android:layout_below="@id/home_WEIGHT"/>
</RelativeLayout>